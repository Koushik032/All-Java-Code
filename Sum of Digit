import java.util.Scanner;
public class MyInfo {
    public static void main(String[] args){
        System.out.println("Enter a Number");

        Scanner input = new Scanner(System.in);

        int num, sum = 0 ;

        num = input.nextInt();

        while ( num != 0 )
        {
            int num1 = num % 10;
            sum += num1;
            //System.out.println(num1);
            num /= 10;
        }
        System.out.println(sum);
        
    }
}
